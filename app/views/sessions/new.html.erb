<h1> Please Login </h1>

<%= form_for :user, url: '/login' do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit 'Log In', , class: 'button' %>
  
<% end %>

<% if flash[:warning] %>
<%=flash[:warning] %></h3>
<% end %>